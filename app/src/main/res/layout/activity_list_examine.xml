<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/register_bg_color"
    android:orientation="vertical"
    tools:context=".ListExamineActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <RadioGroup
            android:id="@+id/rg_history"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dip"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_single_history"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rb_bg_01"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:paddingTop="6dip"
                android:paddingBottom="6dip"
                android:text="单株记录"
                android:textColor="@color/title_text_sel"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/rb_linfen_history"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rb_bg_02"
                android:button="@null"
                android:gravity="center"
                android:paddingTop="6dip"
                android:paddingBottom="6dip"
                android:text="林分记录"
                android:textColor="@color/title_text_sel"
                android:textSize="16sp" />
        </RadioGroup>
    </LinearLayout>

    <com.example.event.controls.MyViewpager
        android:id="@+id/my_view_pager_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp" />


    <!--<android.support.v7.widget.RecyclerView-->
